{% extends 'admin/master/admin.html.twig' %}
{% block css %}{% endblock %}
{% block body_content %}
{% set url_lang_item = '' %}
{% if data.url_lang_item is defined %}
    {% set url_lang_item = data.url_lang_item %}
{% endif%}
<section class="hk-sec-wrapper" id="hk-section-form" hk-data-url="{{url_lang_item}}" hk-data-is-multi-languages="{{data.is_lang_content}}">
    {{ form(form, {attr: {class: 'hk-form-edit-add' , onsubmit: 'return false'}})}}
    <div class="hk-explained" style="padding: 20px; background: #efefef">
        <span class="mall">* {{'setting-mail-template.explained-note'|trans}}</span>
        <ul class="mt-10">
            <li>{{'setting-mail-template.explained-email'|trans}}</li>
            <li>{{'setting-mail-template.explained-link'|trans}}</li>
            <li>{{'setting-mail-template.explained-domain'|trans}}</li>
        </ul>
    </div>
</section>
{% endblock %}
